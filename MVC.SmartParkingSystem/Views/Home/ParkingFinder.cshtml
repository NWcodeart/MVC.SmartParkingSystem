@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model IEnumerable<SmartParkingSystem.Entity.SpacesDto>;

<div class="gray-color">
        
    <!-- parking map-->
        <div class="Parking-map">
            @{ 
