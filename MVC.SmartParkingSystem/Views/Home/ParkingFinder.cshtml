                    <img src=".\css\Images\2871_R1NUIEpPUyAwNjctMzc-removebg-preview.png"  alt="car" class="car" id="S1" >
                    <span class="space-number">@Model.ElementAt(i).ParkingNumber.ToString()</span>
                </div>
                @{i++;}
