        </div>
    </div>

    <!--nivigation bar -contain parking finder and logo- -->
    <div class="shadow bg-white row header">
        <div class=" col-12 col-md-6">
            <img src=".\css\Images\Qassim_University_logo.svg" alt="Qassim_University_logo" class="logo">
        </div>
        <div class="parking-finder col-12 col-md-6 float-end">
            <div class="car-finder rounded-pill shadow-sm">
                <input type="text" class="car-search" placeholder="   Enter your car plate number" id="CarNumber">
                <button type="submit" 
                        class="search-submit "
                        onclick="SubmitWithPopup()">
                        <i class="fa-solid fa-magnifying-glass search-icon"></i>
                        <i class="fas fa-search search-icon"></i>
                    </button>
            </div>
            <span class="search-note">*Enter the number and english letter ex: 123XXX</span>
        </div>
    </div>

    <!-- Modal -->
    <div class="bg-black-hidd"></div>
    <div class="radius card bg-popup text-center">
        <!-- close popup -->
        <button class="back-btn rounded-circle back-icon"><i class="fa-solid fa-angle-right "></i></button>
        <!-- popup content -->
        <div id="partialContainer" class="p-3"></div>
        <button class="rounded-pill btn close-btn">close</button>
    </div>

   