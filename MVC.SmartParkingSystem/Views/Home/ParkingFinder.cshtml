                <input value="@Model.ElementAt(i).IsVacant.ToString()" class="d-none" id="2">
                    <div class="space-block"></div>
                    <img src=".\css\Images\2871_R1NUIEpPUyAwNjctMzc-removebg-preview.png" alt="car" class="car" id="S2" >
